          <div class="grid card bg-base-200 justify-items-center mt-1 mb-1">
                <ul class="row list-unstyled">
                  <% for(var j=0; j<posts.length; j++) {%>
                    <li class="col-6 flex justify-items-center mt-5 mb-5 border border-white">
                      <a href="/post/<%= posts[j]._id%>">
                        <h2><%= posts[j].title%></h2>
                      </a>
                    </li>
                  <% for(var i=0; i<comments.length; i++) {%>
                    <% if(comments[i].post.toString() == posts[j]._id.toString()) {%> 
                    <li class="col-6 justify-content-between mt-5">
                      <h2><%= comments[i].comment%></h2>
                    </li>
                    <% } %>
                   <% } %>
                  <% }%>
                </ul>
