<%- include('partials/header') -%>

<!-- post a question / submit button -->
  <form action="/post/createPost" enctype="multipart/form-data" method="POST">
    <div class = "grid justify-items-center">
      <div class="grid card bg-base-100 justify-items-center mt-1 border-black card flex-shrink-0 w-full 6xl shadow-2xl">
        <textarea id="title" name="title" rows="3" class="block p-2.5 w-1/2 text-sm text-gray-900 bg-base-100 rounded-lg border border-rose-100 shadow-lg focus:ring-blue-500 focus:border-blue-500 mt-2.5" placeholder="Ask a Question..."></textarea>
        <button type="submit" class="btn btn-primary w-1/4 mt-2.5 mb-2.5" value="Upload">Submit</button>
      </div>
    </div>
  </form>

<!-- sort by button -->
  <div class="grid card bg-base-100 justify-items-center mt-1 mb-1 border-black card flex-shrink-0 w-full w-6xl shadow-2xl">
    <div class="dropdown form-control">
      <label tabindex="0" class="btn mt-2.5 mb-2.5 btn-secondary">Sort Feed By</label>
      <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-rose-100 rounded-box w-52">
        <li><a>Most Recent</a></li>
        <li><a>Best Questions</a></li>
        <li><a>Best Answers</a></li>
      </ul>
    </div>

  <!-- Feed -->
    <ul class="row list-unstyled">
  <!-- post text -->
      <% for(var j=0; j<posts.length; j++) {%>
        <div class="card grid shadow-lg mb-2 border border-rose-100 p-2.5">
          <li class="mt-5 mb-5 ">
            <h2 class = "font-bold text-lg"><%= posts[j].title%></h2>
          <!-- post likes -->
            <form
            class="col-1 inline-block"
            action="post/likePost/<%= posts[j].id %>?_method=PUT"
            method="POST"
            >
              <button class="fa fa-heart fa-s text-secondary" type="submit">
                <span class="text-black"><%= posts[j].likes %></span>
              </button>
            </form>
          <!-- delete icon and method -->           
           <%if(posts[j].user == user.id){ %> 
              <form
                action="/post/deletePost/<%= posts[j]._id %>?_method=DELETE"
                method="POST"
                class="inline-block ml-2.5"
              >
                <button class="fa fa-trash fa-s" type="submit"></button>
              </form>
      <%}%>       
          </li>
        <!-- add comments to posts by post.id -->
          <% for(var i=0; i<comments.length; i++) {%>
            <% if(comments[i].post.toString() == posts[j]._id.toString()) {%> 
              <li class="col-6 justify-content-between mt-2">
                <h2><%= comments[i].comment%></h2>
                  <form
                  class="col-1 -mt-2 inline-block"
                  action="comment/likeComment/<%= comments[i]._id %>?_method=PUT"
                  method="POST"
                  >
                            <button class="fa fa-heart fa-xs text-secondary" type="submit">
                              <div class="fa"><span class="text-black"><%= comments[i].likes %></span></div>
                            </button>
                        </form>
                        <% if(comments[i].user == user.id.toString()) {%>
                          <form
                            action="/comment/deleteComment/<%= comments[i]._id %>?_method=DELETE"
                            method="POST"
                            class="inline-block ml-2.5"
                          >
                            <button class="fa fa-trash fa-xs" type="submit">
                            </button>
                          </form>
                          <% }%>
                      <% } %>
                      </li>
                      <% } %>

                      <div class="mt-5">
                        <form action="/comment/createComment/<%=posts[j]._id%>" method="POST">
                          <div class="mb-3">
                              <input type="text" class="inline-block form-control w-11/12" id="comment" name="comment">
                          <button type="submit" class="fa fa-check value="Upload"></button>
                          </div>
                        </form>
                      </div>

                    </div>
                    <% } %>
                  </ul>
              </div>
<%- include('partials/footer') -%>